{
  "id": null,
    "title": "Infrastructure & Container Metrics",
    "tags": ["infrastructure", "containers", "system"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Load Average",
        "type": "graph",
        "targets": [
          {
            "expr": "node_load1",
            "legendFormat": "1m load",
            "refId": "A"
          },
          {
            "expr": "node_load5",
            "legendFormat": "5m load",
            "refId": "B"
          },
          {
            "expr": "node_load15",
            "legendFormat": "15m load",
            "refId": "C"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "yAxes": [
          {"label": "Load Average", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 2,
        "title": "Disk I/O",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(node_disk_read_bytes_total[5m])",
            "legendFormat": "Read {{device}}",
            "refId": "A"
          },
          {
            "expr": "rate(node_disk_written_bytes_total[5m])",
            "legendFormat": "Write {{device}}",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "yAxes": [
          {"label": "Bytes/sec", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 3,
        "title": "Network Traffic",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total{device!~\"lo|docker.*\"}[5m])",
            "legendFormat": "Receive {{device}}",
            "refId": "A"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total{device!~\"lo|docker.*\"}[5m])",
            "legendFormat": "Transmit {{device}}",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "yAxes": [
          {"label": "Bytes/sec", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 4,
        "title": "Container Count",
        "type": "stat",
        "targets": [
          {
            "expr": "count(container_last_seen)",
            "legendFormat": "Running Containers",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "id": 5,
        "title": "Container Network I/O",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total{name=~\".*service.*\"}[5m])",
            "legendFormat": "RX {{name}}",
            "refId": "A"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total{name=~\".*service.*\"}[5m])",
            "legendFormat": "TX {{name}}",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "yAxes": [
          {"label": "Bytes/sec", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 6,
        "title": "Container Filesystem Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "container_fs_usage_bytes{name=~\".*service.*\"} / 1024 / 1024 / 1024",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "yAxes": [
          {"label": "Disk Usage (GB)", "min": 0},
          {"show": false}
        ]
      }
    ]
  }
